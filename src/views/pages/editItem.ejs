<%- include("../components/pageHeaders/pageHeaderWithDelete.ejs", { type: "item"
}) %>
<section class="flex-1 px-8">
    <%- include("../components/forms/itemForm", { item, route:
    `/items/${item.id}/update`}) %>
</section>
<footer class="border-base-200 flex gap-2 border p-6">
    <input
        type="submit"
        form="item-form"
        value="Save"
        class="btn btn-primary"
    />
    <button
        type="button"
        class="btn border-gray-400 bg-white text-gray-500"
        onclick="history.back()"
    >
        Cancel
    </button>
</footer>
<%- include("../components/deleteModal", { itemId: item.id }) %>

<script src="/js/editItemScript.js"></script>
<script src="/js/deleteItemScript.js"></script>
