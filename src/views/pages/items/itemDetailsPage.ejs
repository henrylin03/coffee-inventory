<!DOCTYPE html>
<html lang="en">
  <%- include("../../partials/helmet.ejs", {pageTitle: "Edit Item"}) %>
  <body>
    <%- include("../../components/navbar.ejs") %>
    <main>
      <header>
        <h1 class="page-title" id="page-title">Edit item</h1>
        <div class="buttons">
          <button type="button" class="delete-btn">Delete item</button>
          <a href="/items" aria-label="Close item details and view all items">
            <button type="button" class="close-btn">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-x-icon lucide-x"
              >
                <path d="M18 6 6 18" />
                <path d="m6 6 12 12" />
              </svg>
            </button>
          </a>
        </div>
      </header>

      <section aria-labelledby="page-title" class="content-section">
        <form action="/edit" method="post">
          <ul>
            <li>
              <label for="itemNameInput">Name*</label
              ><input
                type="text"
                id="itemNameInput"
                name="item_name"
                required
              />
            </li>
            <li>
              <label for="skuInput">SKU*</label
              ><input type="text" id="skuInput" name="sku" required />
            </li>
            <li>
              <label for="roasteryInput">Roastery*</label
              ><input
                type="text"
                id="roasteryInput"
                name="roastery_name"
                required
              />
            </li>
            <li>
              <label for="descriptionInput" class="optional-input"
                >Description<small>(Optional)</small></label
              ><textarea
                id="descriptionInput"
                name="description"
                rows="6"
              ></textarea>
            </li>
            <li>
              <label for="weightInput">Weight*</label>
              <div class="right">
                <input
                  type="number"
                  id="weightInput"
                  name="weightInGramsPerUnit"
                  required
                  min="0"
                  step="0.1"
                /><span>grams</span>
              </div>
            </li>
            <li>
              <label for="sellingPriceInput">Selling price*</label>
              <div class="right">
                <span>AUD$</span
                ><input
                  type="number"
                  id="sellingPriceInput"
                  name="selling_price"
                  required
                  step="any"
                  min="0"
                />
              </div>
            </li>
            <li>
              <label for="stockCountInput">Stock on hand*</label>
              <div class="right">
                <input
                  type="number"
                  id="stockCountInput"
                  name="stock_on_hand"
                  required
                  min="0"
                  step="1"
                />
                <span>units</span>
              </div>
            </li>
          </ul>
        </form>
      </section>

      <footer class="page-footer">
        <div class="buttons">
          <button type="button" class="primary-btn">Save</button>
          <a href="/items" aria-label="Close item details and view all items"
            ><button type="button" class="cancel-btn">Cancel</button></a
          >
        </div>
      </footer>
    </main>
  </body>
</html>
