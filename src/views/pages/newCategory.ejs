<header class="flex items-center justify-between p-8">
  <h1 class="text-2xl">New category</h1>
  <button class="btn btn-circle btn-ghost" onclick="history.back()">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x-icon lucide-x opacity-50">
      <path d="M18 6 6 18" />
      <path d="m6 6 12 12" />
    </svg>
  </button>
</header>
<section class="px-8 flex-1">
  <%- include("../components/errorsList") %>
  <form action="/categories/new" method="post" id="categoryForm">
    <ul>
      <li class="grid grid-cols-[9rem_1fr] gap-8 mb-4">
        <label for="nameInput">Category name*</label>
        <input type="text" id="nameInput" name="name" required class="input" />
      </li>
      <li class="grid grid-cols-[9rem_1fr] gap-8">
        <label for="descriptionInput" class="flex-col">
          <span>Description</span>
          <small class="opacity-50 italic">(Optional)</small>
        </label>
        <textarea class="textarea" id="descriptionInput" name="description" rows="6"></textarea>
      </li>
    </ul>
  </form>
</section>
<footer class="flex gap-2 p-6 border border-base-200">
  <input type="submit" form="categoryForm" value="Save" class="btn btn-primary" />
  <button type="button" class="btn bg-white text-gray-500 border-gray-400" onclick="history.back()">Cancel</button>
</footer>