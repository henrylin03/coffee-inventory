<% if (locals.errors) {%>
<section
  role="alert"
  class="alert alert-error alert-soft shadow-3xs mb-8 px-6 py-4"
>
  <div class="text-error flex flex-col">
    <h2 class="text-lg font-bold">Please correct the following errors</h2>
    <ul class="list-disc pl-8">
      <% errors.forEach(error => {%>
      <li><%= error.msg %></li>
      <% })%>
    </ul>
  </div>
</section>
<% } %>
