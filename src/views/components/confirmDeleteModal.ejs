<dialog id="delete-modal">
  <form action="/items/<%= itemId %>/delete" method="POST">
    <div>
      <div>
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-icon lucide-trash">
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" />
            <path d="M3 6h18" />
            <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
          </svg>
          <h1>Deleting item</h1>
        </div>
        <p>
          You're about to delete this item. This action cannot be undone. Are
          you sure you would like to delete it?
        </p>
      </div>
    </div>
    <footer>
      <div>
        <ul class="flex items-center gap-2">
          <li><button type="button" class="cancel-btn btn bg-white text-gray-500 border-gray-400">No, keep it</button></li>
          <li>
            <button type="submit" class="btn btn-error text-white">Yes, delete</button>
          </li>
        </ul>
      </div>
    </footer>
  </form>
</dialog>